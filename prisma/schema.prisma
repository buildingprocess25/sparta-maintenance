// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // Ingat konfigurasi URL ada di prisma.config.ts
}

// =========================================
// ENUMS
// =========================================

enum UserRole {
  BMS
  BMC
  ADMIN
}

enum ReportStatus {
  DRAFT
  PENDING_APPROVAL
  APPROVED
  REJECTED
  COMPLETED
}

enum ItemCondition {
  BAIK
  RUSAK
  TIDAK_ADA
}

enum PreventiveCondition {
  OK
  NOT_OK
}

enum HandlerType {
  BMS
  REKANAN
}

// =========================================
// MODELS
// =========================================

model User {
  id            String        @id @default(uuid())
  email         String        @unique
  nik           String        @unique
  name          String
  role          UserRole      @default(BMS)
  branchName    String?       
  
  reports       Report[]      @relation("CreatedReports")
  approvals     ApprovalLog[] 
  
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

model Store {
  id         String   @id @default(uuid())
  code       String   @unique       // Kode toko (e.g. "ALF-CKL-001")
  name       String                 // "Alfamart Cikokol Raya"
  address    String
  branchName String                 // Nama cabang (link ke User.branchName)
  
  reports    Report[]
  
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([branchName])
}

model Report {
  id            String        @id @default(uuid())
  
  ticketNumber  String        @unique 
  branchCode    String        
  branchName    String        
  storeName     String        @default("")
  contactNumber String        
  
  storeId       String?       
  store         Store?        @relation(fields: [storeId], references: [id])
  
  status        ReportStatus  @default(DRAFT)
  totalEstimation Decimal     @default(0) @db.Decimal(15, 2)
  
  createdById   String
  createdBy     User          @relation("CreatedReports", fields: [createdById], references: [id])
  
  // JSONB columns â€” replaces ReportItem[] and MaterialEstimation[]
  items         Json          @default("[]")
  estimations   Json          @default("[]")
  
  logs          ApprovalLog[]

  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@index([createdById])
  @@index([status])
  @@index([storeId])
  @@index([createdById, status])
  @@index([storeId, status])
}

model ApprovalLog {
  id            String    @id @default(uuid())
  reportId      String
  approverId    String    
  
  status        ReportStatus 
  notes         String?      
  
  report        Report    @relation(fields: [reportId], references: [id])
  approver      User      @relation(fields: [approverId], references: [id])
  
  createdAt     DateTime  @default(now())
}