// This is your Prisma schema file

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // Ingat konfigurasi URL ada di prisma.config.ts
}

// =========================================
// ENUMS
// =========================================

enum UserRole {
  BMS
  BMC
  ADMIN
}

enum ReportStatus {
  DRAFT
  PENDING_APPROVAL
  APPROVED
  REJECTED
  COMPLETED
}

enum ItemCondition {
  BAIK
  RUSAK
  TIDAK_ADA
}

enum PreventiveCondition {
  OK
  NOT_OK
}

enum HandlerType {
  BMS
  REKANAN
}

// =========================================
// MODELS
// =========================================

model User {
  NIK           String        @id
  email         String        @unique
  name          String
  role          UserRole      @default(BMS)
  branchName    String?       
  
  reports       Report[]      @relation("CreatedReports")
  approvals     ApprovalLog[] 
}

model Store {
  code       String   @id @unique // Kode toko (4 karakter random alphanumeric)
  name       String                 // "Alfamart Cikokol Raya"
  branchName String                 // Nama cabang (link ke User.branchName)
  
  reports    Report[]
  
  @@index([branchName])
}

model Report {
  reportNumber  String        @id @unique 
  branchName    String        
  storeName     String        @default("")
  
  storeCode     String?       
  store         Store?        @relation(fields: [storeCode], references: [code])
  
  status        ReportStatus  @default(DRAFT)
  totalEstimation Decimal     @default(0) @db.Decimal(15, 2)
  
  createdByNIK  String
  createdBy     User          @relation("CreatedReports", fields: [createdByNIK], references: [NIK])
  
  // JSONB columns â€” replaces ReportItem[] and MaterialEstimation[]
  items         Json          @default("[]")
  estimations   Json          @default("[]")
  
  logs          ApprovalLog[]

  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@index([createdByNIK])
  @@index([status])
  @@index([storeCode])
  @@index([createdByNIK, status])
  @@index([storeCode, status])
}

model ApprovalLog {
  id            String    @id @default(uuid())
  reportNumber  String
  approverNIK   String    
  
  status        ReportStatus 
  notes         String?      
  
  report        Report    @relation(fields: [reportNumber], references: [reportNumber])
  approver      User      @relation(fields: [approverNIK], references: [NIK])
  
  createdAt     DateTime  @default(now())
}